          </div>
          <div class="stat">
            <p>5,000+</p>
            <span>Doctors on Call</span>
          </div>
        </div>
         <% if (req.session && req.session.user) { %>
          <a href="/profile"><button class="join-btn">My Profile</button></a>
        <% } else { %>
          <a href="/register"><button class="join-btn">Join Today!</button></a>
        <% } %>
